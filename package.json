{
  "name": "smart-x",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:migrate": "turbo run db:migrate",
    "infra:up": "docker-compose -f infra/docker/docker-compose.yml up -d",
    "infra:down": "docker-compose -f infra/docker/docker-compose.yml down",
    "infra:restart": "docker-compose -f infra/docker/docker-compose.yml restart",
    "infra:logs": "docker-compose -f infra/docker/docker-compose.yml logs -f",
    "start": "turbo run start",
    "test": "turbo run test"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "turbo": "^2.6.3",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
