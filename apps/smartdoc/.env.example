# SmartDoc - Environment Configuration
# Copy this file to .env and configure for your environment

# App Configuration
NEXT_PUBLIC_APP_NAME="SmartDoc"
NEXT_PUBLIC_APP_DESCRIPTION="AI-Powered Document Generation"
NEXT_PUBLIC_API_BASE_URL="http://localhost:3000"

# Port Configuration
PORT=3002

# Theme Configuration
NEXT_PUBLIC_PRIMARY_COLOR="#10b981"
NEXT_PUBLIC_SECONDARY_COLOR="#059669"

# Feature Flags
NEXT_PUBLIC_FEATURE_DOCUMENT_TEMPLATES=true
NEXT_PUBLIC_FEATURE_CONTENT_GENERATION=true
NEXT_PUBLIC_FEATURE_EXPORT_FORMATS=true
