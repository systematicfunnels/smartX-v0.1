# SmartCode - Environment Configuration
# Copy this file to .env and configure for your environment

# App Configuration
NEXT_PUBLIC_APP_NAME="SmartCode"
NEXT_PUBLIC_APP_DESCRIPTION="AI-Powered Code Generation"
NEXT_PUBLIC_API_BASE_URL="http://localhost:3000"

# Port Configuration
PORT=3003

# Theme Configuration
NEXT_PUBLIC_PRIMARY_COLOR="#8b5cf6"
NEXT_PUBLIC_SECONDARY_COLOR="#7c3aed"

# Feature Flags
NEXT_PUBLIC_FEATURE_CODE_GENERATION=true
NEXT_PUBLIC_FEATURE_REPOSITORY_ANALYSIS=true
NEXT_PUBLIC_FEATURE_SCAFFOLDING=true
